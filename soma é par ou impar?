#include <stdio.h>
main()
{
    int x, y, w;
    printf("digite um numero\n");
    scanf("%d",&x);
    printf("digite outro numero:\n");
    scanf("%d",&y);
    w=x+y;
    if(w%2==0)
    {
        printf("A soma dos números é par!");
    }
    else
    {
        printf("A soma dos números é impar");
    }
 
    return 0;
}
